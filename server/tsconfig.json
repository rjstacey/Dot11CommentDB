{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2023"],
		"module": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"checkJs": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"sourceMap": true,
		"moduleResolution": "nodenext",
		"noEmit": true,
		"resolveJsonModule": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@schemas/*": ["../schemas/*"]
		}
	},
	"include": ["src/**/*", "../schemas/*"],
	"exclude": ["src/setupTests.*", "src/**/*.test.*"]
}
