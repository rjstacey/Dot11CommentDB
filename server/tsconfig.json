{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "node16",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"checkJs": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": ["src/setupTests.*", "src/**/*.test.*"]
}
