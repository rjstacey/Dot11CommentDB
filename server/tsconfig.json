{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"checkJs": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"sourceMap": true,
		"moduleResolution": "Node16",
		"noEmit": false,
		"resolveJsonModule": true,
		"paths": {
			"@schemas/*": ["../schemas/*"]
		}
	},
	"include": ["src/**/*", "../schemas/*"],
	"exclude": ["src/setupTests.*", "src/**/*.test.*"]
}
